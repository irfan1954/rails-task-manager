<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
<% end %>

<%= link_to 'Delete',
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are You Sure?"}
%>

<%= link_to "Back to main list", tasks_path %>
